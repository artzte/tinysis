%h1 Students
= render :partial => 'shared/student_filter', :locals => { :filter_action => 'index', :filter_controller =>'students'}
%p.left.clear= "Found #{pluralize(@students.length,'student')}."
.right.dropdown-menu.reports
  .title
    = link_to "Download Reports (CSV)"
  .menu
    %ul
      %li= link_to "ALE Report", formatted_students_path({:format=>:csv})
      %li= link_to "Credits Report", formatted_students_path({:format=>:csv})
%table.tiny.clear{:width=>'100%'}
  %thead
    %tr
      %th Student
      %th Coordinator
      %th Grade
      %th Links
  %tbody
    = render :partial => 'student', :collection => @page_items
